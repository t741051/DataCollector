<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/black">

			<ListView
				android:id="@+id/myListView"
				android:layout_width="match_parent"
				android:layout_height="607dp"
				android:background="@color/design_default_color_on_secondary"
				android:divider="#55FFFFFF"
				android:dividerHeight="2dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:scrollbars="vertical"
				android:visibility="visible" />


		</LinearLayout>


		<FrameLayout
			android:id="@+id/frame_layout_1"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:layout_marginTop="180dp"
			android:background="@drawable/floor_3rd_2">

			<ImageView
				android:id="@+id/img_map_mark"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@android:color/transparent" />

		</FrameLayout>

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@drawable/text_frame"
			app:srcCompat="@drawable/text_frame"
			tools:srcCompat="@drawable/text_frame"
			tools:visibility="visible" />

		<com.mitlab.zusliu.User.Interface.PaintBoard
			android:id="@+id/paint_board"
			android:layout_width="match_parent"
			android:layout_below="@id/text"
			android:layout_height="200dp"
			android:background="@android:color/transparent"/>



		<FrameLayout
			android:id="@+id/frame_layout_2"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<Button
				android:id="@+id/button2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="30px"
				android:layout_marginTop="980px"
				android:background="@drawable/button_round_style"
				android:onClick="buttonOnClick"
				android:text="+"
				android:textColor="@android:color/white"
				android:textSize="40dp" />

			<Button
				android:id="@+id/button3"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="175px"
				android:layout_marginTop="1030px"
				android:background="@drawable/button_rectangle_style"
				android:onClick="buttonOnClick_1"
				android:text="商家總覽"
				android:visibility="invisible" />

			<Button
				android:id="@+id/button4"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="330px"
				android:layout_marginTop="1030px"
				android:background="@drawable/button_rectangle_style"
				android:onClick="buttonOnClick_2"
				android:text="地點標記"
				android:visibility="invisible" />

			<Button
				android:id="@+id/button5"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="480px"
				android:layout_marginTop="1030px"
				android:background="@drawable/button_rectangle_style"
				android:onClick="buttonOnClick_3"
				android:text="網站導覽"
				android:visibility="invisible" />

		</FrameLayout><![CDATA[







		android:text="Button" />



	]]>
	</FrameLayout>

	<LinearLayout
		android:id="@+id/side_menu_LinearLayout"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@android:color/white"
		android:orientation="horizontal"
		android:visibility="invisible">


		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerView_1"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
